{% extends 'base.html.twig' %}

{% block title %}List of Books{% endblock %}

{% block body %}
    <h1>List of Books</h1>
    {% if message %}
        <p>{{ message }}</p>
    {% endif %}

    {% if books is not empty %}
        <table border="1" cellpadding="5" cellspacing="0" style="width: 80%; margin: 20px auto; text-align: left;">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Publication date</th>
                    <th>Published</th>
                    <th>Category</th>
                    <th>Author</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for book in books %}
                    <tr>
                        <td>{{ book.title }}</td>
                        <td>{{ book.publicationDate|date('F j, Y H:i') }}</td>
                        <td>{% if book.enabled %}1{% else %}0{% endif %}</td>
                        <td>{{ book.category }}</td>
                        <td>
                            {{ book.author.username ?? 'N/A' }}
                        </td>
                        <td>
                            <a href="{{ path('app_book_show', {'id': book.id}) }}">show</a>
                            <a href="{{ path('app_book_edit', {'id': book.id}) }}">edit</a>
                            <a href="{{ path('app_book_delete', {'id': book.id}) }}"
                               onclick="return confirm('Are you sure you want to delete this book?');"
                            >delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <p>Number of published books : {{ published_count }}</p>
    <p>Number of unpublished books : {{ unpublished_count }}</p>
    <a href="{{ path('app_book_add') }}">
        <button type="button">Create new</button>
    </a>


{% endblock %}